# Spawn terminal
super + ctrl + Return
	alacritty

# Spawn application launcher
super + space
	rofi -show run

# Spawn emoji selector
super + alt + space
	rofimoji

# Increase / decrease screen brightness
XF86MonBrightness{Down,Up}
	light -{U,A} 10

# Lock session
shift + super + l
	light-locker-command -l

# Reload sxhkd
super + Escape
	pkill -USR1 -x sxhkd
